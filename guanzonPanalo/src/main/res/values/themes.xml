<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GuanzonPanalo.Theme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/guanzon_digital_dark_grey</item>
        <item name="colorPrimaryVariant">@color/guanzon_digital_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/guanzon_digital_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/guanzon_digital_orange</item>
        <item name="colorSecondaryVariant">@color/guanzon_digital_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"

    <style name="ScrollViewTheme">
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">5dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">17dp</item>
    </style>

    <style name="TextStyleLabel">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/font_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleLabelNormal">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/font_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextStyleLabel.Title" parent="TextStyleLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.Orange.Large" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/guanzon_digital_orange</item>
    </style>

    <style name="ButtonStyle.Orange.Medium" parent="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/guanzon_digital_orange</item>
    </style>

    <style name="ButtonStyle.Orange.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/guanzon_digital_orange</item>
    </style>

    <style name="ButtonStyle.LightOrange.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/guanzon_digital_light_orange</item>
        <item name="backgroundTint">@color/background_lighten_orange</item>
    </style>

    <style name="ButtonStyle.Grey.Large" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/guanzon_digital_dark_grey</item>
    </style>

    <style name="ButtonStyle.Grey.Medium" parent="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/guanzon_digital_dark_grey</item>
    </style>

    <style name="ButtonStyle.Grey.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/guanzon_digital_dark_grey</item>
    </style>

    <style name="ButtonStyle.Light.Large" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">#D8D8D8</item>
        <item name="android:textColor">@color/font_heavy</item>

    </style>

    <style name="ButtonStyle.Light.Medium" parent="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#D8D8D8</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/font_heavy</item>

    </style>

    <style name="ButtonStyle.Light.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">#D8D8D8</item>
        <item name="android:textColor">@color/font_heavy</item>

    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_out</item>
    </style>

    <style name="MyStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/guanzon_digital_orange</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/guanzon_digital_orange
        </item>
    </style>

</resources>