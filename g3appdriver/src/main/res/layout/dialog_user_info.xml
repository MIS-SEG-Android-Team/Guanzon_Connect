<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="5dp"
    app:cardElevation="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="15dp"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/lbl_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lo Guan Kai"
            android:textSize="18sp"
            android:textColor="@color/font_regular"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/lbl_gcard_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M001-12-010324"
            android:textSize="16sp"
            android:textColor="@color/font_regular"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_client_name"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/lbl_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Points: 1500"
            android:textSize="14sp"
            android:textColor="@color/font_light"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/lbl_gcard_no"
            app:layout_constraintBottom_toBottomOf="@id/lbl_gcard_no"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0.4dp"
            android:background="@color/font_light"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_gcard_no"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/img_qrCode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintRight_toRightOf="parent"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblClose"
            style="@style/ButtonStyle.Orange.Small"
            android:paddingHorizontal="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_qrCode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>