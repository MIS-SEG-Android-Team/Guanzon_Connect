<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="GuanzonAppMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/gap_color_primary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/gap_color_primary_dark</item>
        <item name="android:windowBackground">@color/gap_window_background</item>
        <item name="android:textColorPrimary">@color/gap_textColorPrimary</item>
        <item name="colorAccent">@color/gap_orange_color_accent</item>
        <item name="android:textColor">@color/gap_textColorPrimary</item>
        <item name="android:textSize">@dimen/gap_default_text_size</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="ToolBarMaterialTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/gap_toolbar_background</item>
        <item name="titleTextColor" tools:targetApi="m">@color/gap_titleTextColor</item>
        <item name="buttonTint" tools:targetApi="lollipop">@color/gap_textColorPrimary</item>
    </style>

    <style name="ToolbarPopUpTheme" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/Widget.MaterialComponents.PopupMenu.ContextMenu</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/gap_dashboard_button_background_color</item>
    </style>

    <!--TabLayout Design-->
    <style name="Tab_TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gap_orange_color_accent</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DashBoard_Header" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gap_dashboard_header_background_color</item>
        <item name="cardElevation">@dimen/gap_dashboard_button_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="DashBoard_CardPoints" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gap_dashboard_points_background_color</item>
        <item name="cardElevation">@dimen/gap_dashboard_button_elevation</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="DashBoard_Buttons" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gap_dashboard_button_background_color</item>
        <item name="cardCornerRadius">@dimen/gap_dashboard_button_radius</item>
        <item name="android:layout_margin">@dimen/gap_dashboard_button_margin</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation" tools:ignore="PrivateResource">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation" tools:ignore="PrivateResource">@dimen/cardview_default_elevation</item>
    </style>

    <style name="DashboardImageIcon">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:tint">#F88222</item>
    </style>

    <style name="DashBoardButtonText">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--CardView Dialog Design-->
    <style name="CardViewDialog" parent="Widget.MaterialComponents.CardView">
        <item name="cardMaxElevation">2sp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">#F5F5F5</item>
        <item name="cardElevation" tools:ignore="PrivateResource">@dimen/cardview_default_elevation</item>
    </style>

    <style name="CardViewDialog.BranchDetailDialog">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/gap_dialog_branch_details</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation" tools:ignore="PrivateResource">@dimen/cardview_default_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">5dp</item>
    </style>

    <style name="DialogTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#2D2D2D</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardViewDialog.BranchDetailDialog.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gap_orange_color_accent</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">1dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="iconTint">@color/gap_dialog_button_icon_tint</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gap_textColorPrimaryDark</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="CardViewDialog.ScanResultDialog">
        <item name="cardBackgroundColor">#F5F5F5</item>
        <item name="cardMaxElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <!--CardView for About Us Design
    Card Style-->
    <style name="AboutUs_CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gap_About_Us_CardviewBackground_Color</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AboutUs_Tab_CardChip" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardBackgroundColor">#F88222</item>
    </style>

    <style name="Redeemable_Card_List" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gap_dashboard_button_background_color</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">3dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetRadiusModal</item>
    </style>

    <style name="BottomSheetRadiusModal" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="panelBackground">@drawable/background_bottom_sheet</item>
    </style>

    <style name="SlideAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_out</item>
    </style>
</resources>