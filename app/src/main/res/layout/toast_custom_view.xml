<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/custom_toast_layout"
    style="@style/CardViewDialog.BranchDetailDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/lbl_toast_type"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_toolbar_shopping_cart"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginRight="5dp"
            app:tint="@color/guanzon_orange" />

        <TextView
            android:id="@+id/lbl_toast_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Your item has been addes to Cart"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/gap_textColorPrimaryDark" />
    </LinearLayout>

</androidx.cardview.widget.CardView>