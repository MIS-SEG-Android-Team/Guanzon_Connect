<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/linear_list_item_promos_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AboutUs_CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_list_item_promo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shop_online_now"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:gravity="end|center_vertical">

                <ImageButton
                    android:id="@+id/btn_list_promotions_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_promotions_list_share"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>

                <ImageButton
                    android:id="@+id/btn_list_promotions_social"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_dialog_button_facebook"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lbl_list_item_promo_caption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Looking for Fast, Safe and Convenient? Shop online now at www.guanzongroup.com.ph and get FREE Tripod for every online purchase. Order anytime, anywhere in just a few clicks, FREE DELIVERY at your doorstep. Shop online now!"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/gap_window_background"/>

            <TextView
                android:id="@+id/lbl_list_item_promo_duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Promo runs untill December 10, 2020"
                android:textColor="@color/gap_orange_color_accent"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>