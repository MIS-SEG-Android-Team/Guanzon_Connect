<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#e2e2e2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_list_event_thmbnl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:scaleType="centerCrop"
                android:src="@drawable/aniv_event" />

            <TextView
                android:id="@+id/lbl_list_event_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:text="75 Years Anniversay January 17,18,19, 2020 at Robinsons Place Pangasinan."
                android:gravity="center_vertical"
                android:textColor="@color/gap_color_primary_dark"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lbl_list_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MON, 17 JAN 2020"
                    android:textColor="@color/gap_textColorPrimaryDark"
                    android:fontFamily="@font/roboto_regular"
                    android:drawableLeft="@drawable/ic_list_event_date"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawableStart="@drawable/ic_list_event_date"
                    tools:ignore="HardcodedText"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/lbl_list_event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_list_event_date"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_list_event_location"
                    android:drawableLeft="@drawable/ic_list_event_location"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="Perez Blvd., Dagupan City, Pangasinan"
                    android:textColor="@color/gap_textColorPrimaryDark"
                    tools:ignore="HardcodedText"
                    android:drawablePadding="5dp" />

                <TextView
                    android:id="@+id/lbl_list_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:drawableStart="@drawable/ic_list_event_time"
                    android:drawableLeft="@drawable/ic_list_event_time"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="7:00 PM"
                    android:textColor="@color/gap_textColorPrimaryDark"
                    tools:ignore="HardcodedText"
                    android:drawablePadding="5dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>