<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Dashboard.Fragment_DashBoard"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/DashBoard_Header"
            android:layout_marginBottom="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dashboard_background"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    tools:ignore="UselessParent">

                    <ImageButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:id="@+id/img_dashboard_guanzon_logo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anim_ic_guanzon_logo" />

                    <TextView
                        android:id="@+id/lbl_dashboard_userfullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doe, John Mis"
                        android:textAllCaps="true"
                        android:textColor="@color/gap_orange_color_accent"
                        android:fontFamily="@font/roboto_black"
                        android:layout_marginTop="3dp"
                        android:textSize="20sp"
                        android:gravity="center"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/DashBoard_CardPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="7dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/btn_dashboard_PointsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/lbl_dashboard_gcard_available_points"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="5000"
                        android:textColor="#121212"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Available Points"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/edittTextBackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/lbl_dashboard_active_gcard_number"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="00000000000"
                        android:textColor="#121212" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Gcard Number"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DashBoard_Buttons">

                <RelativeLayout
                    android:id="@+id/btn_dashboard_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_ic_dashboard_history"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            style="@style/DashboardImageIcon"
                            app:srcCompat="@drawable/ic_dashboard_button_history"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HISTORY"
                            style="@style/DashBoardButtonText"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DashBoard_Buttons">

                <RelativeLayout
                    android:id="@+id/btn_dashboard_scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_ic_dashboard_scan"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            style="@style/DashboardImageIcon"
                            app:srcCompat="@drawable/ic_dashboard_button_scan"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCAN"
                            style="@style/DashBoardButtonText"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DashBoard_Buttons">

                <RelativeLayout
                    android:id="@+id/btn_dashboard_redeemables"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_ic_dashboard_redeemabled"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            style="@style/DashboardImageIcon"
                            app:srcCompat="@drawable/ic_dashboard_button_redeemables"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REDEEMABLES"
                            style="@style/DashBoardButtonText"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DashBoard_Buttons">

                <RelativeLayout
                    android:id="@+id/btn_dashboard_orders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <LinearLayout
                        android:id="@+id/linear_ic_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_ic_dashboard_orders"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            style="@style/DashboardImageIcon"
                            app:srcCompat="@drawable/ic_dashboard_button_orders"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ORDERS"
                            style="@style/DashBoardButtonText"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/lbl_dashboard_orderBadge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignTop="@id/linear_ic_order"
                        android:layout_alignRight="@id/linear_ic_order"
                        android:textColor="@color/gap_textColorPrimary"
                        android:text="10"
                        android:gravity="center"
                        android:background="@drawable/badge_background"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DashBoard_Buttons">

                <FrameLayout
                    android:id="@+id/btn_dashboard_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_ic_dashboard_service"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            style="@style/DashboardImageIcon"
                            app:srcCompat="@drawable/ic_dashboard_button_service"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SERVICE"
                            style="@style/DashBoardButtonText"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DashBoard_Buttons">

                <RelativeLayout
                    android:id="@+id/btn_dashboard_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_ic_dashboard_logout"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            style="@style/DashboardImageIcon"
                            app:srcCompat="@drawable/ic_dashboard_button_logout"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOGOUT"
                            style="@style/DashBoardButtonText"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>