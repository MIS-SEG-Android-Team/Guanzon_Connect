<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/AboutUs_CardView"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_about_us_stock_photo"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginBottom="25dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="25dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AboutUs_Tab_CardChip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_us_3"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/gap_textColorPrimaryDark"
                            android:paddingVertical="3dp"
                            android:paddingHorizontal="10dp"/>
                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_3_1"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_3_2"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_3_3"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_3_4"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_3_5"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>