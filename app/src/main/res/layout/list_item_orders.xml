<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Redeemable_Card_List">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction No. : "
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1.2"
                    android:drawableLeft="@drawable/ic_transaction_history"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/lbl_list_transaction_order_transno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="M00000000000"
                    android:textColor="@color/gap_orange_color_accent"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#F88222"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:padding="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Date :"
                android:fontFamily="@font/roboto_regular"/>


            <TextView
                android:id="@+id/lbl_list_transaction_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December 19, 2020"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical|end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pickup Branch :"
                    android:fontFamily="@font/roboto_regular"/>


                <TextView
                    android:id="@+id/lbl_list_transaction_pickup_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GMC Dagupan Honda"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical|end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address :"
                    android:fontFamily="@font/roboto_regular"/>


                <TextView
                    android:id="@+id/lbl_list_transaction_branch_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perez Blvd., Dagupan City, Pangasinan"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical|end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GCard Points :"
                    android:fontFamily="@font/roboto_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/lbl_list_transaction_order_totPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/gap_textColorPrimaryDark"
                        android:background="@drawable/list_item_points_background"
                        android:drawableLeft="@drawable/ic_menu_action_card"
                        android:drawableTint="@color/gap_textColorPrimaryDark"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gap_window_background"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Item/s"
                android:fontFamily="@font/roboto_regular"
                android:drawableLeft="@drawable/ic_transaction_order_items_box"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:padding="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_list_transaction_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_lis_transaction_cancel_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANCEL ORDER"
                android:textColor="@color/gap_textColorPrimary"
                android:fontFamily="@font/roboto_medium"
                app:iconGravity="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:drawableTint="@color/gap_orange_color_accent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:rippleColor="@color/gap_orange_color_accent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>