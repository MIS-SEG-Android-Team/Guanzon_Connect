<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    style="@style/Redeemable_Card_List"
    android:id="@+id/cardview_list_item_content"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <ImageView
                android:id="@+id/img_list_item_redeemable_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_redeemables"
                android:scaleType="centerInside"
                android:padding="20dp"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/img_list_item_new_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_notification_new_item"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/lbl_list_item_redeemable_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Honda Monograde Oil 1.5Liter"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:id="@+id/lbl_list_item_redeemable_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/gap_textColorPrimaryDark"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_menu_action_card"
                android:drawableTint="@color/gap_textColorPrimaryDark"
                android:drawablePadding="5dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/list_item_points_background"/>

            <ImageButton
                android:id="@+id/btn_list_item_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_redeemables_add_to_cart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>