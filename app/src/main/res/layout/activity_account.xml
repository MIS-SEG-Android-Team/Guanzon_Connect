<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Activity_Account">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        app:cardBackgroundColor="@color/gap_toolbar_background"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:baselineAligned="false"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/lbl_account_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doe, John M."
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gap_textColorPrimary"
                        tools:ignore="HardcodedText,NestedWeights,RtlSymmetry"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/lbl_account_userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_detail_sample_email"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical|top"
                        android:textColor="@color/gap_textColorPrimary"
                        tools:ignore="HardcodedText,RtlSymmetry"
                        android:layout_marginBottom="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_account_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        tools:ignore="HardcodedText"
                        style="@style/CardViewDialog.BranchDetailDialog.Button"
                        app:cornerRadius="20dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_account_changePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        tools:ignore="HardcodedText"
                        style="@style/CardViewDialog.BranchDetailDialog.Button"
                        app:cornerRadius="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        app:cardBackgroundColor="@color/gap_toolbar_background"
        android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lbl_account_userDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAMSUNG A71 2019"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gap_textColorPrimary"
                        tools:ignore="HardcodedText,RtlSymmetry"/>

                    <TextView
                        android:id="@+id/lbl_account_dvcMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="09123456789"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gap_textColorPrimary"
                        tools:ignore="HardcodedText,RtlSymmetry"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_account_otherDevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Devices"
                        tools:ignore="HardcodedText"
                        style="@style/CardViewDialog.BranchDetailDialog.Button"
                        app:cornerRadius="20dp"/>

                </LinearLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        app:cardBackgroundColor="@color/gap_toolbar_background"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/lbl_account_gcard_available_points"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:fontFamily="@font/roboto_medium"
                    android:text="5000"
                    android:textColor="@color/gap_titleTextColor"
                    tools:ignore="HardcodedText,NestedWeights" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Available Points"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/textColorPrimaryDark"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/lbl_account_active_gcard_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:fontFamily="@font/roboto_medium"
                    android:text="00000000000"
                    android:textColor="@color/gap_titleTextColor"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Gcard Number"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/gap_toolbar_background"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction History"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/gap_textColorPrimary"
                tools:ignore="HardcodedText,RtlSymmetry"
                android:drawableLeft="@drawable/ic_transaction_history"
                android:drawableStart="@drawable/ic_transaction_history" />

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="bottom"
                android:theme="@style/ToolBarMaterialTheme">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout_account_fragment_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tabIndicatorHeight="4dp"
                    style="@style/Widget.MaterialComponents.TabLayout"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabIconTint="@color/tab_select_indicator_dashboard"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabIndicator="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"
                    tools:targetApi="lollipop" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_account_history"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>