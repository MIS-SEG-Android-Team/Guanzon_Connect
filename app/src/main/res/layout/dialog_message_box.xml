<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CardViewDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_messagebox_dialog_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:scaleType="center"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_dialog_message_box_info"/>

            <TextView
                android:id="@+id/lbl_messagebox_message_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:text="@string/about_us_3"
                android:textColor="@color/gap_textColorPrimaryDark"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_messagebox_positive_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewDialog.BranchDetailDialog.Button"
                android:text="Positive Button"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_messagebox_negative_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewDialog.BranchDetailDialog.Button"
                android:text="Negative Button"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>