<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/linear_list_item_promos_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<!--        style="@style/AboutUs_CardView"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_list_item_promo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_no_image_available"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/lbl_list_item_promo_caption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="Looking for Fast, Safe and Convenient? Shop online now at www.guanzongroup.com.ph and get FREE Tripod for every online purchase. Order anytime, anywhere in just a few clicks, FREE DELIVERY at your doorstep. Shop online now!"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:textColor="@color/cardview_dark_background"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/lbl_list_item_promo_duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Promo runs untill December 10, 2020"
                android:textColor="@color/cardview_dark_background"
                android:paddingBottom="10dp"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>