<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment_Orders"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_orders"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal"
        app:tabTextColor="@color/font_light"
        app:tabSelectedTextColor="@color/guanzon_digital_light_orange"
        app:tabIndicatorColor="@color/guanzon_digital_light_orange"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_Orders"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content"/>

</LinearLayout>