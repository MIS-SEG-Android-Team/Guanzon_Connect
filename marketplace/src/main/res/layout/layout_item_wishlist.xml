<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    android:background="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp">


        <ImageView
            android:id="@+id/imgWishProduct"
            android:layout_width="97dp"
            android:layout_height="97dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblWishProdNme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/font_regular"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:lines="1"
                android:text="Product Name"/>

            <TextView
                android:id="@+id/lblWishProdPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/guanzon_digital_light_orange"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="₱ 810.00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/lblWishProdPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:text="₱ 1,000.00"
                    android:textColor="@color/font_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblWishPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/font_light"
                    android:text="   -  19%"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginLeft="10dp">

            <ImageButton
                android:id="@+id/removeItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_delete_20"
                card_view:targetApi="o" />

            <ImageButton
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                android:layout_marginBottom="18dp"/>

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>